.main {
  padding: 0rpx 20rpx;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  width: 100%;
  /* overflow-y: auto; */
}

.skew {
  width: 48%;
  height: 250px;
  background-color: #999;
  position: relative;
  z-index: 100;
  overflow: hidden;
  margin-top: 20rpx;
  box-shadow: 0 0 10rpx #c5c4c4;
}

.skew:last-of-type{
  margin-bottom: 20rpx;
}

.skew >view {
  background-color: white;
  height: 100px;
  position: absolute;
}


.skew .border {
  width: 100%;
  bottom: 30px;
  transform: skew(80deg) rotate(0deg);
}

.skew .text {
  width: 100%;
  height: 80px;
  bottom: 0;
  padding-left: 20rpx;
}

.skew .text .name{
  font-size: 36rpx;
  font-weight: 500;
  font-family: Arial, Helvetica, sans-serif;
}

.skew .text .detail{
  margin-top: 10rpx;
  font-size: 13px;
  color: #8e9296;
}

.skew .text .detail .introduction{
  margin-top: 10rpx;
}