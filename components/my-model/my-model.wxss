.courses {
  height: 260rpx;
  margin: 10rpx 40rpx 20rpx ;
  background-color: white;
  box-sizing: border-box;
  border-radius: 20rpx;
  box-shadow: 0px 0px 5px rgba(145, 138, 138, 0.533);
  display: flex;
  padding: 30rpx 10rpx;
  margin-bottom: 15rpx;
}

.courses:nth-of-type(1){
  margin-top: 20rpx;
}


.courses .courses-left{
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
}

.courses .courses-left .left-image{
  width: 90%;
  height: 65%;
  border-radius: 10rpx;
}

.courses .courses-left .left-count{
  font-size: 24rpx;
  color: #aca9a9;
}

.courses .courses-left .left-count text{
  font-size: 30rpx;
  color: black;
}

.courses .courses-right{
  flex: 2;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  padding-left: 10rpx;
  position: relative;
}

.courses .courses-right .right-content .right-title{
  font-weight: 300;
  color: black;
}

.courses .courses-right .right-content .right-title
view{
  width: 40rpx;
  height: 40rpx;
  background-color: rgb(199, 119, 119);
  display: inline-block;
  text-align: center;
  line-height: 40rpx;
  color: white;
  border-radius: 10rpx;
}

.courses .courses-right .right-content .right-author{
  color: #5c5c5c;
  font-size: 24rpx;
  font-weight: 200;
  margin-top: 10rpx;
}

.courses .courses-right .right-buttom{
  position: absolute;
  bottom: 0px;
  right: 30rpx;
  width: 170rpx;
  height: 40rpx;
  background-color: rgb(245, 245, 245);
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 25rpx;
  font-weight: 200;
  box-shadow: 0px 0px 5px #e7e6e6;
  font-size: 26rpx;
}