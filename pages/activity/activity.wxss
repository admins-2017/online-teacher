page {
  width: 100%;
  height: 100%;
}

.class-tabs{
 width: 100%;
 height: 100% !important;
 overflow-y: auto;
 padding-bottom: 50rpx;
}

.test-class {
  background-color: greenyellow !important;
}

.active-class{
  background-color: #fcfcfc ;
}

.line-class{
  border-bottom: 1rpx solid #eb685a;
}

.header-line-class{
  border-bottom: 1px solid #fcfcfc;
}

.content {
  width: 100%;
  display: flex;
  justify-content: center;
  padding: 20rpx 0;
}

.content:last-child{
  margin-bottom: 50rpx;
}

.content .detail{
  width: 90%;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: center;
  position: relative;
}

.content .detail .detail-header{
  width: 100%;
  height: 20%;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.content .detail .detail-header .header-title{
  display: flex;
  justify-content: center;
  align-items: center;
}

.content .detail .detail-header .header-title .name{
  font-size: 30rpx;
  font-weight: 500;
}

.content .detail .detail-header .header-title .date{
  font-size: 24rpx;
  color: #9b9b9b;
  padding-left: 10rpx;
}

.content .detail .detail-header .header-status{
  font-size: 24rpx;
  color: #9b9b9b;
}

.content .detail .detail-footer{
  width: 100%;
  height: 80%;
  display: flex;
  justify-content: center;
}

.content .detail .detail-footer .footer-images{
  width: 100%;
  height: 250rpx;
  border-radius: 10rpx;
}

.content .detail .mask{
  width: 100%;
  height: 80%;
  display: flex;
  justify-content: center;
  position: absolute;
  bottom: 0rpx;
  left: 0rpx;
  z-index: 999;
  opacity: 0.7;
}

.content .detail .mask .mask-image{
  width: 100%;
  height: 250rpx;
  border-radius: 10rpx;
}
